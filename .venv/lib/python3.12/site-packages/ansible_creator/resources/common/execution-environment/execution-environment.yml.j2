---
version: 3

images:
  base_image:
    name: {{ execution_environment_image }}

dependencies:
  ansible_core:
    package_pip: ansible-core

  ansible_runner:
    package_pip: ansible-runner

  system:
    - openssh-clients
    - sshpass

  python:
    - requests
    - boto3

  galaxy:
    collections:
      - name: ansible.posix
      - name: ansible.utils

additional_build_steps:
  append_base:
    - RUN $PYCMD -m pip install -U pip

options:
  tags:
    - ansible_sample_ee
